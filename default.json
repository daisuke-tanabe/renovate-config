{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 9am on monday", "before 12am on monday"],
  "rangeStrategy": "bump",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "forkProcessing": "disabled",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "description": "dependencies are automatically updated to the latest patch version"
    },
    {
      "groupName": "react",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"]
    },
    {
      "groupName": "lint and typescript",
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"],
      "matchPackageNames": ["typescript", "prettier"]
    },
    {
      "groupName": "storybook",
      "matchPackagePatterns": ["^@storybook/"],
      "matchPackageNames": ["storybook"]
    },
  ]
}
