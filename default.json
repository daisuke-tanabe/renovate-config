{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "rangeStrategy": "bump",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "forkProcessing": "disabled",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "description": "dependencies are automatically updated to the latest patch version"
    },
    {                                                                                                                                                                                                                             
      "groupName": "node.js",                                                                                                                                                                                                     
      "matchDepNames": ["node", "@types/node", "public.ecr.aws/docker/library/node"]                                                                                                                                              
    },
    {
      "groupName": "react",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"]
    },
    {
      "groupName": "lint and typescript",
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"],
      "matchPackageNames": ["typescript", "typescript-eslint", "prettier"]
    },
    {
      "groupName": "storybook",
      "matchPackagePatterns": ["^@storybook/"],
      "matchPackageNames": ["storybook"]
    },
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Dockerfile.*$"],
      "matchStrings": [
        "pnpm@(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-[^@\\s]+)?)"
      ],
      "depNameTemplate": "pnpm",
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    },
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Dockerfile.*$"],
      "matchStrings": [
        "turbo@(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-[^@\\s]+)?)"
      ],
      "depNameTemplate": "turbo",
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ]
}
