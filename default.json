{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "rangeStrategy": "bump",
  "separateMultipleMajor": true,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "forkProcessing": "disabled",
  "packageRules": [
    {
      "description": "Patch updates are automatically merged",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "description": "Group Node.js runtime, Docker image, and type definitions to keep versions aligned",
      "groupName": "node.js",
      "matchDepNames": ["node", "@types/node"],
      "matchPackageNames": ["public.ecr.aws/docker/library/node"]
    },
    {
      "description": "Group React runtime and type definitions to keep versions aligned",
      "groupName": "react",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"]
    },
    {
      "description": "Group ESLint, TypeScript, and Prettier to avoid config incompatibilities",
      "groupName": "lint and typescript",
      "matchPackageNames": [
        "eslint*",
        "@eslint/**",
        "@typescript-eslint/**",
        "typescript",
        "typescript-eslint",
        "prettier"
      ]
    },
    {
      "description": "Group all Storybook packages to update together",
      "groupName": "storybook",
      "matchPackageNames": ["@storybook/**", "storybook"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Dockerfile.*$"],
      "matchStrings": [
        "pnpm@(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-[^@\\s]+)?)"
      ],
      "depNameTemplate": "pnpm",
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    },
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Dockerfile.*$"],
      "matchStrings": [
        "turbo@(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-[^@\\s]+)?)"
      ],
      "depNameTemplate": "turbo",
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ]
}
